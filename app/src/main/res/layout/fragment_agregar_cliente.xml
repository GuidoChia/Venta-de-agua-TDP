<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id='@+id/fragment'
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="fill_vertical"
        android:orientation="vertical"
        android:padding="10dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/InputLayoutClient"
            style="@style/AppTheme.TextInputLayout"
            android:hint="@string/nombre_del_cliente">

            <skrb.appprueba.customviews.TextInputAutoCompleteTextView
                android:id="@+id/NombreCliente"
                style="@style/AppTheme.AutoCompleteInputEditText"
                android:drawableStart="@drawable/account_plus_outline" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/AppTheme.TextInputLayout"
            android:hint="@string/cantidad_de_bidones_que_llevo_20">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/BidonesLlevoDe20"
                style="@style/AppTheme.TextInputEditText.Number.Accent"
                android:drawableLeft="@drawable/dice_d20" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/AppTheme.TextInputLayout"
            android:hint="@string/cantidad_de_bidones_que_llevo_12">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/BidonesLlevoDe12"
                style="@style/AppTheme.TextInputEditText.Number.Accent"
                android:drawableLeft="@drawable/dice_d12" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/AppTheme.TextInputLayout"
            android:hint="@string/cantidad_de_bidones_devueltos_20">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/BidonesDevueltos20"
                style="@style/AppTheme.TextInputEditText.Red"
                android:drawableLeft="@drawable/dice_d20" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/AppTheme.TextInputLayout"
            android:hint="@string/cantidad_de_bidones_devueltos_12">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/BidonesDevueltos12"
                style="@style/AppTheme.TextInputEditText.Red"
                android:drawableLeft="@drawable/dice_d12" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/AppTheme.TextInputLayout"
            android:hint="@string/cantidad_de_dinero_pagado">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/DineroPagado"
                style="@style/AppTheme.TextInputEditText.Number.Accent"
                android:drawableStart="@drawable/currency_usd" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id='@+id/BotonFecha'
            style="@style/AppTheme.DateButton"
            android:hint="@string/fecha">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id='@+id/BotonConfirmar'
            style="@style/AppTheme.Button"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="@string/confirmar_venta">

        </com.google.android.material.button.MaterialButton>


    </LinearLayout>

</ScrollView>

