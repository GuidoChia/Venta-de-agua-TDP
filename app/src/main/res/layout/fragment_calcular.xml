<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:dividerPadding="16dp"
    android:gravity="fill_vertical"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/calcular_dinero_mensual"
        style="@style/AppTheme.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular ingreso bruto mensual"
        android:textAppearance="@style/ThemeOverlay.MaterialComponents.Light"
        android:textSize="20sp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/calcular_total_bidones"
        style="@style/AppTheme.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular cantidad total de bidones"
        android:textAppearance="@style/ThemeOverlay.MaterialComponents.Light"
        android:textSize="20sp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/calcular_bidones_20"
        style="@style/AppTheme.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular cantidad total de bidones de 20 "
        android:textAppearance="@style/ThemeOverlay.MaterialComponents.Light"
        android:textSize="20sp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/calcular_bidones_12"
        style="@style/AppTheme.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular cantidad total de bidones de 12"
        android:textAppearance="@style/ThemeOverlay.MaterialComponents.Light"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/resultados_mes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
